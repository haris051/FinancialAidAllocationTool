@model List<FinancialAidAllocationTool.Models.ClassDetails>

  
@{
    
   
}

<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">

        <script src="~/lib/jquery/dist/jquery.js"> </script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"> </script>
        <link rel="stylesheet" href="~/css/MyStyle.css">

        <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">   
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<link rel="stylesheet" href="http://cdn.datatables.net/1.10.2/css/jquery.dataTables.min.css">
<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "pagingType": "simple" // "simple" option for 'Previous' and 'Next' buttons only
            });
        })
    </script>
        
 
    </head>
    <body>
        <nav class="navbar navbar-expand-md navbar-light bg-light">
  <a href="#" class="navbar-brand">Admin</a>
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
      <span class="navbar-toggler-icon"></span>
  </button>
  <div id="navbarCollapse" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
          <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Merit Based</a>
              <div class="dropdown-menu">
                  @Html.ActionLink("BIIT", "MeritList", new {Discipline="BIT"},new { @class = "dropdown-item" })
                  @Html.ActionLink("BCSC", "MeritList", new {Discipline="BCS"},new { @class = "dropdown-item" })
                  @Html.ActionLink("MCS", "MeritList", new {Discipline="MCS"},new { @class = "dropdown-item" })
                  @Html.ActionLink("MIT", "MeritList", new {Discipline="MIT"},new { @class = "dropdown-item" })
              </div>
          </li>
      </ul>
      <ul class="nav navbar-nav">
        <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Need Based</a>
            <div class="dropdown-menu">
                <a href="#" class="dropdown-item">BCS</a>
                <a href="#" class="dropdown-item">BIT</a>
                <a href="#" class="dropdown-item">MCS</a>
                <a href="#" class="dropdown-item">MIT</a>
            </div>
        </li>
        <li class="nav-item">
                <a asp-controller="Home" asp-action="Settings" class="nav-link">Settings</a>
        </li>
    </ul>
  </div>
</nav>
     <div class="container" style="margin-top: 20px;">
                    
               @{
                

                  foreach(var obj in Model)
                  {  

                     //  WebGrid objWebGrid = new System.Web.Helpers.WebGrid(obj.StudentList);
                          <div class="table-responsive-sm">
                               

                        <table id="myTable" style="font-size: small;table-layout:fixed" class="table-hover table-sm table-borderless MyTable">
                           
                           
                           <tr>
                               <td colspan="2">
                                   <h5>@obj.Discipline @obj.SemesterCount @obj.Section</h5>
                               </td>
                               <td colspan="6">
                                   <h5>Total Strength : @obj.ClassStrength</h5>
                               </td>
                           </tr>
                      @{foreach(var i in obj.StudentList)
                      {
                         <tr class="spacer">
                             <td colspan="2" class="MyTabletd">
                                 @i.RegisterNo
                             </td>
                             <td colspan=2 class="MyTabletd">
                                 @i.Name
                             </td>
                             <td colspan=1 class="MyTabletd">
                                 @i.CGPA
                             </td>
                             <td class="MyTabletd">
                                @Html.TextBoxFor(m=>i.AllocationAmount, new {style="width:100%;height:30px;margin-left:0px;",@class="form-control"} )

                             </td>
                              <td class="MyTabletd">
                              @Html.ActionLink("Accept", "ScholarShip", new {student=i,Class =obj,Submit="Accept"},new {@class = "btn btn-Success btn-sm" })

                             </td>
                             <td class="MyTabletd">
                              @Html.ActionLink("Reject", "ScholarShip", new {student=i,Class =obj,Submit="Reject"},new { @class = "btn btn-Danger btn-sm" })

                             </td>
                         </tr>
                          
                          

                         
                              
                          
                          
                      }
                      }
                       <tr>
                        <td colspan="8"><hr width="100%"> </td>
                        </tr>
                       </table>
                          </div>

                    
                        
                       
                  }

                 
               }

                


       
</div>
<script>
    myFunction()
    {
        alert("Hello");
    }
</script>
               
    </body>
    
</html>